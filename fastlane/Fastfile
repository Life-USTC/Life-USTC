update_fastlane
default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    setup_ci(force: true)

    api_key = app_store_connect_api_key(
      key_id: ENV["APPSTORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APPSTORE_CONNECT_ISSUER_ID"],
      key_filepath: "./build/AuthKey.p8"
    )

    get_certificates(
      force: false,
      generate_apple_certs: true,
      output_path: "./build/certs",
      api_key: api_key
    )

    get_provisioning_profile(
      api_key: api_key,
      cert_id: ENV["CERTIFICATE_ID"],
      app_identifier: "dev.tiankaima.Life-USTC",
      output_path: "./build/profiles",
      readonly: true
    )

    get_provisioning_profile(
      api_key: api_key,
      cert_id: ENV["CERTIFICATE_ID"],
      app_identifier: "dev.tiankaima.Life-USTC.Widget",
      output_path: "./build/profiles",
      readonly: true
    )

    increment_build_number(xcodeproj: "Life@USTC.xcodeproj")
    build_app(
      scheme: "Life@USTC",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "dev.tiankaima.Life-USTC.Widget": "dev.tiankaima.Life-USTC.Widget AppStore",
          "dev.tiankaima.Life-USTC": "dev.tiankaima.Life-USTC AppStore"
        },
        manageAppVersionAndBuildNumber: false
      },
      output_directory: "./build/ipa",
      output_name: "Life@USTC.ipa",
      build_path: "./build/build",
      archive_path: "./build/archive",
      derived_data_path: "./build/derived_data",
      silent: true
    )
    changelog_from_git_commits
    upload_to_testflight
  end
end
